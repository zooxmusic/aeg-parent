	<file:inbound-channel-adapter
			id="inputFileChannelAdapter"
			channel="fileIn"
			directory="@remoteDir.get()"
			auto-startup="false"
			prevent-duplicates="true">
		<int:poller id="inputFilePoller" time-unit="SECONDS" fixed-delay="1" max-messages-per-poll="100" />
